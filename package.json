{
  "name": "misior",
  "description": "Create a new website open source project with nextJs to openTibia Comunnity",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/MITHGaming/mitg.misior",
  "author": "Guilherme Fontes <gui.fontes.amorim@gmail.com> (@guifontes)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript",
    "misior",
    "tibia"
  ],
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "migrate": "prisma migrate dev",
    "prisma-reset": "prisma migrate reset",
    "pscalesetup": "pscale connect misior initial-setup --port 3309",
    "pscaleshadow": "pscale connect misior shadow --port 3310",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@prisma/client": "3.14.0",
    "@reduxjs/toolkit": "1.8.2",
    "axios": "0.27.2",
    "bcrypt": "5.0.1",
    "express-rate-limit": "6.4.0",
    "express-slow-down": "1.4.0",
    "joi": "17.6.0",
    "moment-timezone": "0.5.34",
    "next": "12.1.6",
    "next-auth": "4.3.4",
    "next-pwa": "5.5.2",
    "next-redux-wrapper": "7.0.5",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-loading-skeleton": "3.1.0",
    "react-redux": "8.0.2",
    "redux": "4.2.0",
    "response-time": "2.3.2",
    "styled-components": "5.3.5",
    "swr": "1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@types/bcrypt": "5.0.0",
    "@types/express-slow-down": "1.3.2",
    "@types/gtag.js": "0.0.10",
    "@types/node": "17.0.38",
    "@types/react": "17.0.44",
    "@types/react-dom": "18.0.3",
    "@types/response-time": "2.3.5",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.0",
    "prettier": "2.6.2",
    "prisma": "3.14.0",
    "typescript": "4.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
